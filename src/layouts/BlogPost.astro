---
import BaseLayout from './BaseLayout.astro';
import PostDate from '../components/PostDate.astro';
import PostTags from '../components/PostTags.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, date, tags, image } = post.data;
---

<BaseLayout title={title}>
  <article class="prose prose-lg dark:prose-dark max-w-6xl mx-auto">

    {image && (
      <div class="mx-auto w-full max-w-6xl flex justify-center items-center">
        <img
          src={image}
          alt={title}
          class="w-full h-auto object-cover rounded-lg shadow-md mb-8"
        />
      </div>
    )}

    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-2">{title}</h1>
      <div class="mb-4">
        <PostDate date={date} />
      </div>
      {tags && <PostTags tags={tags} />}
    </header>
    
    <div class="prose-headings:font-bold prose-a:text-primary-600 hover:prose-a:text-primary-500 dark:prose-a:text-primary-500">
      <slot />
    </div>
  </article>
</BaseLayout>
