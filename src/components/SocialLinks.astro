---

<div class="flex gap-4 mb-4">
  {siteConfig.social.github && (
    <a
      href={siteConfig.social.github}
      target="_blank"
      rel="noopener noreferrer"
      class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
      aria-label="GitHub"
    >
      <Fragment set:html={socialIcons.github} />
    </a>
  )}
  {siteConfig.social.bilibili && (
    <a
      href={siteConfig.social.bilibili}
      target="_blank"
      rel="noopener noreferrer"
      class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
      aria-label="Bilibili"
    >
      <Fragment set:html={socialIcons.bilibili} />
    </a>
  )}
  {siteConfig.social.weibo && (
    <a
      href={siteConfig.social.weibo}
      target="_blank"
      rel="noopener noreferrer"
      class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
      aria-label="Weibo"
    >
      <Fragment set:html={socialIcons.weibo} />
    </a>
  )}
  {siteConfig.social.email && (
    <a
      href={`mailto:${siteConfig.social.email}`}
      class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
      aria-label="Email"
    >
      <Fragment set:html={socialIcons.email} />
    </a>
  )}
</div>